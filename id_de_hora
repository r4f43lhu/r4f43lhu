            System.out.println("Por favor, anote seu protocolo "+protocolo);
            
        //calculo do valor a receber
        int  ValorAReceber;
        
        if (HorasTrabalhadas<40){
        ValorAReceber = HorasTrabalhadas*20;
        System.out.println("O valor a si receber e: "+ValorAReceber);
        
        }
